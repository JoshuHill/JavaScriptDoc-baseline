{{#any exceptions}}
    <dt>{{translateHeading 'throws' exceptions}}</dt>
    {{#each exceptions}}
        <dd>
            {{#all type type.names}}
                {{#any type.names}}
                    {{describeType (typeUnion type.names)}}
                {{/any}}
            {{/all}}
            {{#embed 'description'}}{{/embed}}
        </dd>
    {{/each}}
{{/any}}
